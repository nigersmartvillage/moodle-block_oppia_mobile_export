<form 
	class="oppia_export" 
	style="padding:20px; margin:20px 0;"
	action="{{wwwroot}}/blocks/oppia_mobile_export/publish/course.php" method="POST">

	<input type="hidden" name="id" value="{{course_id}}">
	<input type="hidden" name="sesskey" value="{{sesskey}}">
	<input type="hidden" name="server_id" value="{{server_id}}">
	<input type="hidden" name="file" value="{{file}}">
	<input type="hidden" name="course_export_status" value="{{course_export_status}}">

	{{# is_draft }}
    	<h2>{{# str }}publish_heading_draft,block_oppia_mobile_export{{/ str }}</h2>
    	<p>{{# str }}publish_text_draft,block_oppia_mobile_export,{{server_connection}}{{/ str }}</p>
	{{/ is_draft }}

	{{^is_draft }}
	    <h2>{{# str }}publish_heading,block_oppia_mobile_export{{/ str }}</h2>
	    <p>{{# str }}publish_text,block_oppia_mobile_export, {{server_connection}}{{/ str }}</p>
	{{/ is_draft }}
	
	<div class="pure-g">
		<div class="pure-u-1 pure-u-md-1-2 input-label">{{# str }}publish_field_username,block_oppia_mobile_export{{/ str }}</div>
		<div class="pure-u-1 pure-u-md-1-2"> <input type="text" class="form-control" name="username" value=""></div>

		<div class="pure-u-1 pure-u-md-1-2 input-label">{{# str }}publish_field_password,block_oppia_mobile_export{{/ str }}</div>
		<div class="pure-u-1 pure-u-md-1-2"> <input type="password" class="form-control" name="password" value=""></div>

		<div class="pure-u-1 pure-u-md-1-2 input-label"><label>{{# str }}publish_field_tags,block_oppia_mobile_export{{/ str }} </div>
		<div class="pure-u-1 pure-u-md-1-2"> <input type="text" class="form-control" name="tags" value="{{tags}}"> </div>
		<div class="pure-u-1 pure-u-md-1-2"></div>
		<div class="pure-u-1 pure-u-md-1-2">
			<input class="btn btn-primary" type="submit" name="submit" value="{{# str }}publish_btn, block_oppia_mobile_export{{/ str }}">
		</div>
	</div>
</form>

<div class="export-results warning" style="display:block;padding:20px">
	{{# str }}export_download_intro, block_oppia_mobile_export{{/ str }}<br/><br/>

	<strong>{{course_name}}</strong><br/>
	<a class="btn" href="{{export_url}}">
		{{# str }} export_download, block_oppia_mobile_export{{/ str }}
	</a>

	<a class="btn btn-danger" href="{{wwwroot}}/blocks/oppia_mobile_export/cleanup.php?id={{course_id}}">
		{{# str }}export_cleanup, block_oppia_mobile_export{{/ str }}
	</a>
</div>
